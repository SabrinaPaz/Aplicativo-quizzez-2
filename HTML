<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Questionário de Português e Matemática</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container">
        <h1>Questionário de Português e Matemática</h1>

        <!-- Div para mostrar a questão -->
        <div id="question-container">
            <p id="question">Qual é a capital do Brasil?</p>
            <ul id="options">
                <li onclick="checkAnswer(1)">São Paulo</li>
                <li onclick="checkAnswer(2)">Rio de Janeiro</li>
                <li onclick="checkAnswer(3)">Brasília</li>
                <li onclick="checkAnswer(4)">Salvador</li>
            </ul>
        </div>

        <button onclick="nextQuestion()">Próxima Pergunta</button>
        <div id="score"></div>
    </div>

    <script>
        // Definir as questões
        const questions = [
            {
                question: "Qual é a capital do Brasil?",
                options: ["São Paulo", "Rio de Janeiro", "Brasília", "Salvador"],
                correct: 3 // Índice da resposta correta (1 = São Paulo, 2 = Rio de Janeiro, etc.)
            },
            {
                question: "Qual é o resultado de 6 x 7?",
                options: ["40", "42", "44", "48"],
                correct: 2 // A resposta correta é 42
            },
            {
                question: "Quem escreveu 'O Primo Basílio'?",
                options: ["Machado de Assis", "José de Alencar", "José Lins do Rego", "José Saramago"],
                correct: 1 // A resposta correta é Machado de Assis
            },
            {
                question: "Quanto é 5 + 8?",
                options: ["10", "12", "13", "14"],
                correct: 2 // A resposta correta é 13
            }
        ];

        let currentQuestionIndex = 0;  // Começa com a primeira questão
        let score = 0;  // Pontuação do usuário

        // Função para mostrar a questão e as opções
        function displayQuestion() {
            const question = questions[currentQuestionIndex];
            document.getElementById("question").textContent = question.question;

            const optionsList = document.getElementById("options");
            optionsList.innerHTML = ""; // Limpar opções anteriores

            question.options.forEach((option, index) => {
                const li = document.createElement("li");
                li.textContent = option;
                li.onclick = function() { checkAnswer(index + 1); }; // Passa o índice da resposta
                optionsList.appendChild(li);
            });
        }

        // Função para verificar a resposta
        function checkAnswer(selectedOption) {
            const correctOption = questions[currentQuestionIndex].correct;
            if (selectedOption === correctOption) {
                score++;
                alert("Resposta correta!");
            } else {
                alert("Resposta errada!");
            }

            // Exibe a pontuação atual
            document.getElementById("score").textContent = `Pontuação: ${score}`;
        }

        // Função para ir para a próxima pergunta
        function nextQuestion() {
            currentQuestionIndex++;
            if (currentQuestionIndex >= questions.length) {
                alert("Fim do questionário! Sua pontuação final é " + score);
                currentQuestionIndex = 0;  // Reinicia o questionário
                score = 0;  // Reinicia a pontuação
            }
            displayQuestion();
        }

        // Inicializa a primeira pergunta
        displayQuestion();
    </script>
</body>
</html>
